{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react-jsx",
    "sourceMap": true,
    "types": [
      "node",
      "react"
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"],
//  for koishi build tool: prevent yakomo-tsc copy source js to output file
  "atsc": {
    "loaders": [".yaml",".yml",".js"]
  }
}
