{
  "name": "koishi-plugin-beatsaber-bot",
  "description": "一个 用于 BeatSaber 的 koishi Bot 插件",
  "version": "0.1.0-rc.patch14",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "dist"
  ],
  "license": "MIT",
  "author": {
    "name": "ktKongTong",
    "email": "kt@ktlab.io"
  },
  "repository": "https://github.com/ktKongTong/koishi-beats-bot",
  "homepage": "https://koishi-beats-bot.vercel.app/",
  "keywords": [
    "beatsaber",
    "koishi",
    "koishi-plugin"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "koishi": {
    "service": {
      "required": [
        "database",
        "puppeteer",
        "cron"
      ]
    },
    "locales": [
      "en",
      "zh"
    ],
    "description": {
      "en": "a koishi bot plugin for BeatSaber",
      "zh": "一个 BeatSaber Bot 插件"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "dayjs": "^1.11.3",
    "eslint": "9.x",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.3.0",
    "globby": "^14.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.10.0",
    "vitepress": "^1.2.2"
  },
  "peerDependencies": {
    "@loskir/styled-qr-code-node": "^1.5.1",
    "canvas": "^2.11.2",
    "chart.js": "^4.4.3",
    "country-flag-icons": "^1.5.11",
    "dayjs": "^1.11.3",
    "koishi": "^4.17.4",
    "koishi-plugin-cron": "^3.1.0",
    "koishi-plugin-puppeteer": "^3.7.3",
    "lucide-react": "^0.379.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "lint": "eslint src",
    "lint-fix": "eslint --fix src",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "clean": "rm -rf lib  tsconfig.tsbuildinfo",
    "copy-yml-resource": "node ./scripts/build.mjs",
    "compile": "tsc",
    "build": "npm run clean && npm run copy-yml-resource && npm run compile",
    "pub": "npm run build && npm publish"
  },
  "lint-staged": {
    "*.{js,ts,vue,jsx,tsx}": [
      "eslint --cache --fix src"
    ]
  }
}
