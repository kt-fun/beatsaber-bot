{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2022",
    "module": "commonjs",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@satorijs/element",
    "types": [
      "node",
      "yml-register/types"
    ],
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  },
  "include": [
    "src"
  ],
  "atsc": {
    "loaders": [".yaml",".yml",".js"]
  }
}
