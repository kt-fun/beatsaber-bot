{
  "compilerOptions": {
    /* Basic Options */
    "incremental": false,
    "declaration": true,
    "allowJs": true,
    "noEmit": true,
    "target": "es2022",
    "module": "nodenext",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "resolveJsonModule": true,

    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false
  }
}
